<p style="color: green"><%= notice %></p>
<div class="container">
<h1><u> Edificio</u></h1>

<p><li> Edificio: <%= @building.name.capitalize %></li></p>

<p><li>Direcci√≥n: <%= @building.address.capitalize %></li></p>

<p><li>Ciudad: <%= @building.city.name %></li></p>

<div>
    <p><li>Caracteristicas</li></p>

  <div class="col-md-6">
    <ol class="list-group list-group-numbered">
      <% @building.characteristics.each do |pc| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold"><%= pc.name %></div>
          </div>
        </li>
      <% end %>
    </ol>
  </div>

<p class="mt-3"><li>Departamentos:</li></p>
<%  @building.apartments.each do |estado| %>
<div class="fw-bold ms-5"><%= estado.number %>: <%= estado.status %></div>

 <% end %>



<div class="mt-4">
 <%= link_to "Volver al Index de Edificios", buildings_path, class:"btn  mb-3" %>
<% if current_person %>
  <%= link_to "Editar este Edificio", edit_building_path(@building), class:"btn  mb-3" %>
  <%= button_to "Eliminar este Edificio", @building, method: :delete, class:"btn  mt-4 mb-3" %>
  <% end %>
</div>
</div>